<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Items List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      text-align: center;
      padding: 20px;
    }

    h1 {
      color: #333;
    }

    form {
      margin-bottom: 20px;
    }

    input[type="text"],
    input[type="number"] {
      padding: 8px;
      margin: 5px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    button {
      padding: 8px 12px;
      background-color: #4caf50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    .items-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
    }

    .card {
      background-color: white;
      border-radius: 8px;
      padding: 15px;
      width: 200px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .card h2 {
      margin: 0;
      font-size: 18px;
      color: #333;
    }

    .card p {
      margin: 5px 0;
      color: #666;
    }

    .actions {
      display: flex;
      justify-content: center;
      gap: 8px;
      margin-top: 10px;
    }

    button.edit-btn,
    button.delete-btn {
      border: none;
      border-radius: 5px;
      padding: 6px;
      width: 32px;
      height: 32px;
      cursor: pointer;
      font-size: 18px;
    }

    button.edit-btn {
      background-color: #4caf50;
      color: white;
    }

    button.delete-btn {
      background-color: #f44336;
      color: white;
    }

    button.edit-btn:hover {
      background-color: #45a049;
    }

    button.delete-btn:hover {
      background-color: #d32f2f;
    }
  </style>
</head>
<body>
  <h1>Items List</h1>

  <!-- Add Item -->
  <form action="/add" method="POST">
    <input type="text" name="name" placeholder="Item name" required />
    <input type="number" name="price" placeholder="Price" required />
    <button type="submit">Add</button>
  </form>

  <!-- Search -->
  <form action="/search" method="GET">
    <input type="text" name="q" placeholder="Search item..." />
    <button type="submit">Search</button>
  </form>

  <!-- Items -->
  <div class="items-container">
    <% if (items.length > 0) { %>
      <% items.forEach(item => { %>
        <div class="card">
          <h2><%= item.name %></h2>
          <p>$<%= item.price %></p>

          <div class="actions">
            <button class="edit-btn" onclick="showEditForm('<%= item._id %>', '<%= item.name %>', <%= item.price %>)">‚úèÔ∏è</button>
            <form action="/delete/<%= item._id %>" method="GET" style="display:inline;">
              <button type="submit" class="delete-btn">üóë</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No items found.</p>
    <% } %>
  </div>

  <!-- Edit Form (Hidden) -->
  <div id="editForm" style="display:none; margin-top: 20px;">
    <h2>Edit Item</h2>
    <form id="editItemForm" method="POST">
      <input type="text" name="name" id="editName" required />
      <input type="number" name="price" id="editPrice" required />
      <button type="submit">Update</button>
    </form>
  </div>

  <script>
    function showEditForm(id, name, price) {
      document.getElementById('editForm').style.display = 'block';
      document.getElementById('editName').value = name;
      document.getElementById('editPrice').value = price;
      document.getElementById('editItemForm').action = '/edit/' + id;
      window.scrollTo(0, document.body.scrollHeight);
    }
  </script>
</body>
</html>